<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <template id="report_stock_move_pdf">
            <t t-call="report.html_container">
                <t t-call="report.internal_layout">
                    <div class="page">
                        <h1 class="text-center">Stock Moves Report</h1>
                        <br/>
                        <table class="table table-condensed">
                             <thead style="background-color:#E0E0E0" >
                             	<tr>
                                	<th class="text-center" style="border: 1px solid black">Dates</th>
                                   	<th class="text-center" style="border: 1px solid black">Categories Products</th>
                                   	<th class="text-center" style="border: 1px solid black">Products</th>
                                   	<th class="text-center" style="border: 1px solid black">Companies</th>
                                   	<th class="text-center" style="border: 1px solid black">Source Locations</th>
                                   	<th class="text-center" style="border: 1px solid black">Destination Locations</th>
                                   	<th class="text-center" style="border: 1px solid black">Picking Types</th>
                                </tr>
                             </thead>
                             <tbody class="text-center">
                                <tr>
                                	<td style="border: 1px solid black">
                                		From: <span t-esc="formatLang(get_date_from(data),date=True)"/> To: <span t-esc="formatLang(get_date_to(data),date=True)"/>
                                		
                                	</td>
                                    <td style="border: 1px solid black">
                           				<span t-esc="display_category_product(data)"/>
                                    </td>
                                    <td style="border: 1px solid black">
                           				<span t-esc="display_product(data)"/>
                                    </td>
                                    <td style="border: 1px solid black">
                                    	<span t-esc="display_partner(data)"/>
                                    </td>
                                    <td style="border: 1px solid black">
                           				<span t-esc="display_source_location(data)"/>
                                    </td>
                                    <td style="border: 1px solid black">
                           				<span t-esc="display_destination_location(data)"/>
                                    </td>
                                    <td style="border: 1px solid black">
                           				<span t-esc="display_picking_type(data)"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <t t-foreach="get_products(doc_ids)" t-as="product">
                        	<div style="background-color:#E0E0E0;height: 20px;"><h4><span style="font-weight:bold;" t-esc="get_name_product(product.id)"/></h4></div>
                        	<div style="height: 3px;"/>
                        	<t t-if="has_stock_moves(data,product.id)==False"><span style="color:red">No inventory moves related to this product</span></t>
                        	<t t-if="has_stock_moves(data,product.id)==True">
                        	<t t-foreach="get_locations(data,product.id)" t-as="location">
                        		<table class="table table-condensed">
	                                 <t t-if="get_include_costs(data)==True">
		                               	<thead style="background-color:#E0E0E0" class="text-left">
		                                    <tr>
												<th  colspan="9" style="border: 1px solid black">
	                                    			<span t-esc="location[0]['complete_name']"/>
		                                    	</th>
	                                        </tr>
		                                </thead>
		                                
		                               
		                                <tbody class="text-left">
		                                	<tr>
		                                		<td colspan="4" style="padding-top:0.5px;padding-bottom:0.5px;border: 1px solid black">Opening Quantity: <span t-esc="formatLang(set_opening_quantity(data,product.id,location[0]['location_id']))"/></td>
		                                		<td colspan="5" style="padding-top:0.5px;padding-bottom:0.5px;border: 1px solid black">Opening Cost: <span t-esc="formatLang(get_opening_cost(data,product.id,location[0]['location_id'],return_opening_quantity()))"/></td>   
		                                	</tr>
		                                </tbody>
	                        			<thead class="text-center"  style="background-color:#E0E0E0">
	                            			<tr>
		                                    	<th class="text-center" style="border: 1px solid black">Date</th>
		                                    	<th class="text-center" style="border: 1px solid black">Origin</th>
		                                    	<th class="text-center" style="border: 1px solid black">Company</th>
		                                    	<th class="text-center" style="border: 1px solid black">Quantity Input</th>
		                                    	<th class="text-center" style="border: 1px solid black">Quantity Output</th>
		                                    	<th class="text-center" style="border: 1px solid black">Final Quantity</th>
		                                    	<th class="text-center" style="border: 1px solid black">Standard Price</th>
		                                    	<th class="text-center" style="border: 1px solid black">Final Cost</th>
		                                    	<th class="text-center" style="border: 1px solid black">Total</th>
	                                        </tr>
	                        			</thead>
		                                
		                                <tbody>
		                                	<tr  t-foreach="get_group_moves(data,product.id,location[0]['location_id'],return_opening_quantity())" t-as="move">
		                                		<td class="text-left" style="padding-top:0.5px;padding-bottom:0.5px;border: 1px solid black"><span t-esc="formatLang(move['date'],date=True)"/></td>
		                                		<td class="text-left" style="padding-top:0.5px;padding-bottom:0.5px;border: 1px solid black"><span t-esc="move['origin']"/></td>
		                                		<td class="text-left" style="padding-top:0.5px;padding-bottom:0.5px;border: 1px solid black"><span t-esc="move['company']"/></td>
		                                		<td class="text-right" style="padding-top:0.5px;padding-bottom:0.5px;border: 1px solid black"><span t-esc="formatLang(move['quantity_input'])"/></td>
		                                		<td class="text-right" style="padding-top:0.5px;padding-bottom:0.5px;border: 1px solid black"><span t-esc="formatLang(move['quantity_output'])"/></td>
		                                		<td class="text-right" style="padding-top:0.5px;padding-bottom:0.5px;border: 1px solid black"><span t-esc="formatLang(move['final_quantify_move'])"/></td>
		                                		<td class="text-right" style="padding-top:0.5px;padding-bottom:0.5px;border: 1px solid black"><span t-esc="formatLang(move['standard_price'])"/></td>
		                                		<td class="text-right" style="padding-top:0.5px;padding-bottom:0.5px;border: 1px solid black"><span t-esc="formatLang(move['final_cost'])"/></td>
		                                		<td class="text-right" style="padding-top:0.5px;padding-bottom:0.5px;border: 1px solid black"><span t-esc="formatLang(move['total'])"/></td>
		                                	</tr>
		                                	<tr>
		                                		<td class="text-left" colspan="4" style="padding-top:0.5px;padding-bottom:0.5px;border: 1px solid black">Final Quantity: <span t-esc="formatLang(get_final_quantity())"/></td>
		                                		<td class="text-left" colspan="5" style="padding-top:0.5px;padding-bottom:0.5px;border: 1px solid black">Final Cost: <span t-esc="formatLang(return_final_cost())"/></td>   
		                                	</tr>
		                             </tbody>
		                           </t>
		                           <t t-if="get_include_costs(data)==False">
		                               	<thead style="background-color:#E0E0E0" class="text-left">
		                                    <tr>
												<th  colspan="6" style="border: 1px solid black">
	                                    			<span t-esc="location[0]['complete_name']"/>
		                                    	</th>
	                                        </tr>
		                                </thead>
		                                <tbody class="text-left">
		                                	<tr>
		                                		<td colspan="6" style="padding-top:0.5px;padding-bottom:0.5px;border: 1px solid black">Opening Quantity: <span t-esc="formatLang(set_opening_quantity(data,product.id,location[0]['location_id']))"/></td>
		                                	</tr>
		                                </tbody>
	                        			<thead class="text-center"  style="background-color:#E0E0E0">
	                            			<tr>
		                                    	<th class="text-center" style="border: 1px solid black">Date</th>
		                                    	<th class="text-center" style="border: 1px solid black">Origin</th>
		                                    	<th class="text-center" style="border: 1px solid black">Company</th>
		                                    	<th class="text-center" style="border: 1px solid black">Quantity Input</th>
		                                    	<th class="text-center" style="border: 1px solid black">Quantity Output</th>
		                                    	<th class="text-center" style="border: 1px solid black">Final Quantity</th>
	                                        </tr>
	                        			</thead>
		                                
		                                <tbody>
		                                	<tr  t-foreach="get_group_moves(data,product.id,location[0]['location_id'],return_opening_quantity())" t-as="move">
		                                		<td class="text-left" style="padding-top:0.5px;padding-bottom:0.5px;border: 1px solid black"><span t-esc="formatLang(move['date'],date=True)"/></td>
		                                		<td class="text-left" style="padding-top:0.5px;padding-bottom:0.5px;border: 1px solid black"><span t-esc="move['origin']"/></td>
		                                		<td class="text-left" style="padding-top:0.5px;padding-bottom:0.5px;border: 1px solid black"><span t-esc="move['company']"/></td>
		                                		<td class="text-right" style="padding-top:0.5px;padding-bottom:0.5px;border: 1px solid black"><span t-esc="formatLang(move['quantity_input'])"/></td>
		                                		<td class="text-right" style="padding-top:0.5px;padding-bottom:0.5px;border: 1px solid black"><span t-esc="formatLang(move['quantity_output'])"/></td>
		                                		<td class="text-right" style="padding-top:0.5px;padding-bottom:0.5px;border: 1px solid black"><span t-esc="formatLang(move['final_quantify_move'])"/></td>
		                                	</tr>
		                                	<tr>
		                                		<td class="text-left" colspan="6" style="padding-top:0.5px;padding-bottom:0.5px;border: 1px solid black">Final Quantity: <span t-esc="formatLang(get_final_quantity())"/></td>  
		                                	</tr>
		                             </tbody>
		                           </t>
	                            </table>
	                         </t>
                        	</t>
                        </t>
                    </div>
                </t>
            </t>
        </template>
        <template id="report_stock_move">
    		<t t-call="report.html_container">
        		<t t-foreach="doc_ids" t-as="doc_id">
            		<t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'stock_move_report.report_stock_move_pdf')"/>
        		</t>
    		</t>
		</template>
    </data>
</openerp>