<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <!-- views -->
        <!-- project.project -->
        <!-- form -->
        <record id ="view_project_form" model="ir.ui.view">
            <field name="name">view.project.form</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/div/div/label[@for='use_tasks']" position="after">
                    <field name="is_scrum" class="oe_inline" attrs="{'invisible': [('use_tasks','=',False)]}"/>
                    <label for="is_scrum" attrs="{'invisible': [('use_tasks','=',False)]}"/>
                </xpath>
            </field>
        </record>
        
        <!-- project.task -->
        <!-- form -->
        <record id ="view_task_form" model="ir.ui.view">
            <field name="name">view.task.form</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group/group/field[@name='project_id']" position="after">
                    <field name="is_scrum" invisible="True"/>
                    <field name="product_backlog_id"
                        attrs="{'invisible': [('is_scrum','=',False)],'required': [('is_scrum','=',True)]}"/>
                    <field name="release_backlog_id"
                        attrs="{'invisible': [('is_scrum','=',False)],'required': [('is_scrum','=',True)]}"/>
                    <field name="sprint_id"
                        attrs="{'invisible': [('is_scrum','=',False)],'required': [('is_scrum','=',True)]}"
                        on_change="onchange_sprint(sprint_id)"/>
                    <field name="feature_id"
                        attrs="{'invisible': [('is_scrum','=',False)]}"
                        on_change="onchange_feature(feature_id)"/>
                    <field name="feature_type_id"/>
                </xpath>
                <xpath expr="//form/sheet/notebook/page[@string='Extra Info']" position="after">
                    <page string="Sequence" name="sequence">
                        <separator string="Previous Tasks"/>
                        <field name="previous_task_ids"
                            attrs="{'readonly': [('state','in',['done','cancelled'])]}"/>
                        <separator string="Next Tasks"/>
                        <field name="next_task_ids"
                            attrs="{'readonly': [('state','in',['done','cancelled'])]}"/>
                    </page>
                </xpath>
                <xpath expr="//form/sheet/group/group/field[@name='date_deadline']" position="attributes">
                        <attribute name="attrs">{'readonly': ['|',('state','in',['done','cancelled']),('is_scrum','=',True)]}</attribute>
                </xpath>
            </field>
        </record>
        
        <!-- ccorp.project.scrum.product.backlog -->
        <!-- form -->
        <record id="view_product_backlog_form" model="ir.ui.view">
            <field name="name">view.product.backlog.form</field>
            <field name="model">ccorp.project.scrum.product.backlog</field>
            <field name="type">form</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <form string="Product Backlog" version="7.0">
                    <header>
                        <button name="do_done" type="object" string="Done"
                            states ="open,pending" class="oe_highlight"
                            confirm="Are you sure you want to set as done this release backlog?"/>
                        <button name="do_cancel" type="object" string="Cancel"
                            states ="open,pending"
                            confirm="Are you sure you want to cancel this product backlog?"/>
                        <field name="stage_id" widget="statusbar" clickable="True"/>
                        <field name="state" invisible="True"/>
                    </header>
                    <sheet>
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name"/></h1>
                        <group>
                            <group>
                                <field name="project_id"
                                    on_change="onchange_project(project_id,stage_id)"/>
                                <field name="user_id"/>
                                <field name="expected_hours"/>
                                <field name="effective_hours"/>
                                <field name="remaining_hours"/>
                            </group>
                            <group>
                                <field name="date_end"/>
                                <field name="deadline"/>
                                <field name="progress" widget="progressbar"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Features" name="features">
                                <field name="feature_ids"
                                attrs="{'readonly':['|',('state','=', 'cancelled'),('state','=', 'done')]}"
                                context="{'product_backlog_id': id}"/>
                            </page>
                            <page string="Release Backlogs" name="release_backlogs">
                                <field name="release_backlog_ids"
                                attrs="{'readonly':['!','|',('state','=','open'),('state','=','pending')]}"
                                context="{'product_backlog_id': id, 'project_id': project_id}"/>
                            </page>
                            <page string="Team Members" name="team_members">
                                <field name="member_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="company_id"/>
                                        <field name="email"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- tree -->
        <record id="view_product_backlog_tree" model="ir.ui.view">
            <field name="name">view.product.backlog.tree</field>
            <field name="model">ccorp.project.scrum.product.backlog</field>
            <field name="type">tree</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <tree string="Product Backlog"
                    colors="grey:state in ('cancelled','done');blue:state == 'pending';
                        red:(deadline&lt;date_end) and (state in ('draft','pending','open'))">
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="user_id"/>
                    <field name="expected_hours"/>
                    <field name="effective_hours"/>
                    <field name="remaining_hours"/>
                    <field name="state"/>
                    <field name="date_end"/>
                    <field name="deadline"/>
                    <field name="progress" widget="progressbar"/>
                </tree>
            </field>
        </record>
        
        <!-- kanban -->
        <record model="ir.ui.view" id="view_product_backlog_kanban">
            <field name="name">view.product.backlog.kanban</field>
            <field name="model">ccorp.project.scrum.product.backlog</field>
            <field name="arch" type="xml">
                <kanban default_group_by="stage_id">
                    <field name="color"/>
                    <field name="state"/>
                    <field name="remaining_hours" sum="Remaining Hours"/>
                    <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <div class="oe_dropdown_toggle oe_dropdown_kanban">
                                <span class="oe_e">í</span>
                                <ul class="oe_dropdown_menu">
                                    <t t-if="widget.view.is_action_enabled('edit')"><li><a type="edit">Edit...</a></li></t>
                                    <t t-if="widget.view.is_action_enabled('delete')"><li><a type="delete">Delete</a></li></t>
                                    <li><ul class="oe_kanban_colorpicker" data-field="color"/></li>
                                </ul>
                            </div>
                            <div class="oe_kanban_content">
                                <div><b><field name="name"/></b></div>
                                <div>
                                    <field name="project_id"/><br/>
                                    <t t-if="record.deadline.raw_value and record.deadline.raw_value lt (new Date())" t-set="red">oe_kanban_text_red</t>
                                    <span t-attf-class="#{red || ''}"><i><field name="deadline"/></i></span>
                                </div>
                                <div class="oe_kanban_footer_left">
                                    <span title="Remaining Hours">
                                        <span class="oe_e">N</span>
                                        <t t-esc="Math.round(record.remaining_hours.raw_value)"/>
                                    </span>
                                </div>
                            </div>
                            <div class="oe_clear"></div>
                        </div>
                    </t>
                    </templates>
                </kanban>
            </field>
         </record>
        
        <!-- search -->
        <record id="view_product_backlog_search" model="ir.ui.view">
            <field name="name">view.product.backlog.search</field>
            <field name="model">ccorp.project.scrum.product.backlog</field>
            <field name="arch" type="xml">
               <search string="Product Backlog">
                    <field name="name"/>
                    <field name="project_id"/>
                    <separator/>
                    <filter string="New" name="new" domain="[('state','=','draft')]"/>
                    <filter string="In Progress" name="in_progress" domain="[('state','=','open')]"/>
                    <filter string="Cancelled" name="cancelled" domain="[('state','=','cancelled')]"/>
                    <filter string="Pending" name="pending" domain="[('state','=','pending')]"/>
                    <filter string="Closed" name="closed" domain="[('state','=','close')]"/>
                    <separator/>
                    <filter string="My Backlogs" name="my_backlogs" domain="[('user_id','=',uid)]"/>
                    <group expand="1" string="Group By...">
                        <filter string="Scrum Master" name="group_scrum_master" domain="[]"  context="{'group_by':'user_id'}"/>
                        <filter string="Project" name="group_project" domain="[]"  context="{'group_by':'project_id'}"/>
                        <filter string="Stage" name="group_stage" domain="[]"  context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- project.scrum.release.backlog -->
        <!-- form -->
