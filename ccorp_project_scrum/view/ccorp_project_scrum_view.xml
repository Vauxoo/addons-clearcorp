                            confirm="Are you sure you want to cancel this release backlog?"/>
                        <field name="stage_id" widget="statusbar" clickable="True"/>
                        <field name="state" invisible="True"/>
                    </header>
                    <sheet>
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group>
                            <group>
                                <field name="project_id"
                                    on_change="onchange_project(project_id, stage_id)"/>
                                <field name="product_backlog_id"
                                    on_change="onchange_product_backlog(product_backlog_id)"/>
                                <field name="expected_hours"/>
                                <field name="effective_hours"/>
                                <field name="remaining_hours"/>
                            </group>
                            <group>
                                <field name="date_start"/>
                                <field name="date_end"/>
                                <field name="deadline"/>
                                <field name="progress" widget="progressbar"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Features" name="features">
                                <field name="feature_ids" widget="many2many" 
                                    domain="[('release_backlog_id','=',False),('state','=',['approved','open'])]"
                                    attrs="{'readonly':['|',('state','=', 'cancelled'),('state','=', 'done')]}"
                                    context="{'release_backlog_id': id, 'product_backlog_id': product_backlog_id}"/>
                            </page>
                            <page string="Sprints" name="sprints">
                                <field name="sprint_ids"
                                    attrs="{'readonly':['!','|',('state','=','open'),('state','=','pending')]}"
