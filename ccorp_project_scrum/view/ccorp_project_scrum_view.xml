        <!-- search -->
        <record id="view_release_backlog_search" model="ir.ui.view">
            <field name="name">view.release.backlog.search</field>
            <field name="model">ccorp.project.scrum.release.backlog</field>
            <field name="arch" type="xml">
               <search string="Product Backlog">
                    <field name="name"/>
                    <field name="product_backlog_id"/>
                    <field name="project_id"/>
                    <separator/>
                    <filter string="New" name="new" domain="[('state','=','draft')]"/>
                    <filter string="In Progress" name="in_progress" domain="[('state','=','open')]"/>
                    <filter string="Cancelled" name="cancelled" domain="[('state','=','cancelled')]"/>
                    <filter string="Pending" name="pending" domain="[('state','=','pending')]"/>
                    <filter string="Closed" name="closed" domain="[('state','=','close')]"/>
                    <separator/>
                    <filter string="My Backlogs" name="my_backlogs" domain="[('user_id','=',uid)]"/>
                    <group expand="1" string="Group By...">
                        <filter string="Scrum Master" name="group_scrum_master" domain="[]"  context="{'group_by':'user_id'}"/>
                        <filter string="Project" name="group_project" domain="[]"  context="{'group_by':'project_id'}"/>
                        <filter string="Product Backlog" name="group_product_backlog" domain="[]"  context="{'group_by':'product_backlog_id'}"/>
                        <filter string="Stage" name="group_stage" domain="[]"  context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- project.scrum.feature -->
        <!-- form -->
        <record id="view_feature_form" model="ir.ui.view">
            <field name="name">view.feature.form</field>
            <field name="model">ccorp.project.scrum.feature</field>
            <field name="type">form</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <form string="Feature" version="7.0">
                    <header>
                        <button name="set_approved" type="object"
                            string="Approved" class="oe_highlight"
                            states ="draft"/>
                        <button name="set_open" type="object"
                            string="Open" class="oe_highlight"
                            states ="approved,cancelled,done"/>
                        <button name="set_done" type="object" 
                            string="Done" class="oe_highlight"
                            states ="open"/>
                        <button name="set_cancel" type="object" string="Cancel"
                            states ="open"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <div style="display: inline-block;">
                                <div>
                                    <style>
                                        .feature_custom input {
                                            width:150px !important;
                                        }
                                    </style>
                                    <field name="code" class="oe_inline feature_custom"
                                        width="20px" placeholder="Code..."/>
                                </div>
                            </div>
                            - <field name="name" class="oe_inline" placeholder="Feature Summary"/>
                        </h1>
                        <group>
                            <group>
                                <field name="product_backlog_id"/>
                                <field name="release_backlog_id"/>
                                <field name="partner_id"/>
                                <field name="priority"/>
                                <field name="type_id"/>
                                <field name="expected_hours" required="True"/>
                            </group>
                            <group>
                                <field name="date_start"/>
                                <field name="date_end"/>
                                <field name="deadline"/>
                                <field name="effective_hours"/>
                                <field name="remaining_hours"/>
                                <field name="progress" widget="progressbar"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description" name="description">
                                <field name="description" placeholder="Add a Description..."/>
                                <field name="task_ids"/>
                            </page>
                            <page string="Sprints" name="sprints">
                                <field name="sprint_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- tree -->
        <record id="view_feature_tree" model="ir.ui.view">
            <field name="name">view.feature.tree</field>
            <field name="model">ccorp.project.scrum.feature</field>
            <field name="type">tree</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <tree string="Feature"
                    colors="grey:state in ('cancelled','done');blue:state == 'approved';
                        red:(deadline&lt;date_end) and (state in ('draft','approved','pending','open'))">
                    <field name="state" invisible="True"/>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="product_backlog_id"/>
                    <field name="release_backlog_id"/>
                    <field name="priority"/>
                    <field name="partner_id"/>
                    <field name="expected_hours"/>
                    <field name="remaining_hours"/>
                    <field name="date_end"/>
                    <field name="deadline"/>
                    <field name="progress" widget="progressbar"/>
                </tree>
            </field>
        </record>
        
        <!-- kanban -->
        <record model="ir.ui.view" id="view_feature_kanban">
            <field name="name">view.feature.kanban</field>
            <field name="model">ccorp.project.scrum.feature</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state">
                    <field name="state"/>
                    <field name="color"/>
                    <field name="priority"/>
                    <field name="partner_id"/>
                    <field name="remaining_hours" sum="Remaining Hours"/>
                    <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <div class="oe_dropdown_toggle oe_dropdown_kanban">
                                <span class="oe_e">í</span>
                                <ul class="oe_dropdown_menu">
                                    <t t-if="widget.view.is_action_enabled('edit')"><li><a type="edit">Edit...</a></li></t>
                                    <t t-if="widget.view.is_action_enabled('delete')"><li><a type="delete">Delete</a></li></t>
                                    <li><ul class="oe_kanban_colorpicker" data-field="color"/></li>
                                </ul>
                            </div>
                            <div class="oe_kanban_content">
                                <div><b><field name="code"/> - <field name="name"/></b></div>
                                <div>
                                    <field name="project_id"/><br/>
                                    <t t-if="record.deadline.raw_value and record.deadline.raw_value lt (new Date())" t-set="red">oe_kanban_text_red</t>
                                    <span t-attf-class="#{red || ''}"><i><field name="deadline"/></i></span>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <div class="oe_bottom_elems">
                                        <div class="oe_star">
                                            <a t-if="record.priority.raw_value == 5" type="object" string="Very Low" name="set_low_priority" class="oe_e oe_star_gray">7</a>
                                            <a t-if="record.priority.raw_value == 4" type="object" string="Low" name="set_medium_priority" class="oe_e oe_star_blue">7</a>
                                            <a t-if="record.priority.raw_value == 3" type="object" string="Medium" name="set_high_priority" class="oe_e oe_star_green">7</a>
                                            <a t-if="record.priority.raw_value == 2" type="object" string="High" name="set_very_high_priority" class="oe_e oe_star_yellow">7</a>
                                            <a t-if="record.priority.raw_value == 1" type="object" string="Very High" name="set_very_low_priority" class="oe_e oe_star_red">7</a>
                                        </div>
                                        <img t-att-src="kanban_image('res.partner', 'image_small', record.partner_id.raw_value)" t-att-title="record.partner_id.value" width="24" height="24" class="oe_kanban_avatar"/>
                                    </div>
                                </div>
                                <div class="oe_kanban_footer_left">
                                    <span title="Remaining Hours">
                                        <span class="oe_e">N</span>
                                        <t t-esc="Math.round(record.remaining_hours.raw_value)"/>
                                    </span>
                                </div>
                            </div>
                            <div class="oe_clear"></div>
                        </div>
                    </t>
                    </templates>
                </kanban>
            </field>
         </record>
        
        <!-- search -->
        <record id="view_feature_search" model="ir.ui.view">
            <field name="name">view.feature.search</field>
            <field name="model">ccorp.project.scrum.feature</field>
            <field name="arch" type="xml">
               <search string="Feature">
                    <field name="name"
                        filter_domain="['|',('name','ilike',self),('code','ilike',self)]"/>
                    <field name="project_id"/>
                    <field name="product_backlog_id"/>
                    <separator/>
                    <filter string="New" name="new" domain="[('state','=','draft')]"/>
                    <filter string="Approved" name="approved" domain="[('state','=','approved')]"/>
                    <filter string="In Progress" name="in_progress" domain="[('state','=','open')]"/>
                    <filter string="Cancelled" name="cancelled" domain="[('state','=','cancelled')]"/>
                    <filter string="Done" name="done" domain="[('state','=','done')]"/>
                    <separator/>
                    <filter string="My Features" name="my_features" domain="[('user_id','=',uid)]"/>
                    <group expand="1" string="Group By...">
                        <filter string="Scrum Master" name="group_scrum_master" domain="[]"  context="{'group_by':'user_id'}"/>
                        <filter string="Project" name="group_project" domain="[]"  context="{'group_by':'project_id'}"/>
                        <filter string="Product Backlog" name="group_product_backlog" domain="[]"  context="{'group_by':'product_backlog_id'}"/>
                        <filter string="Release Backlog" name="group_release_backlog" domain="[]"  context="{'group_by':'release_backlog_id'}"/>
                        <filter string="Stage" name="group_stage" domain="[]"  context="{'group_by':'state'}"/>
                        <filter string="Priority" name="group_priority" domain="[]"  context="{'group_by':'priority'}"/>
                        <filter string="Type" name="group_type" domain="[]"  context="{'group_by':'type_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- project.scrum.sprint -->
        <!-- form -->
        <record id="view_sprint_form" model="ir.ui.view">
            <field name="name">view.sprint.form</field>
            <field name="model">ccorp.project.scrum.sprint</field>
            <field name="type">form</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <form string="Sprint" version="7.0">
                    <header>
                        <button name="set_done" type="object" string="Done"
                            states ="open,pending"
                            confirm="Are you sure you want to set as done this sprint?"/>
                        <button name="set_cancel" type="object" string="Cancel"
                            states ="open,pending"
                            confirm="Are you sure you want to cancel this sprint?"/>
                        <field name="stage_id" widget="statusbar" clickable="True"/>
                        <field name="state" invisible="True"/>
                    </header>
                    <sheet>
                        <div class="oe_right oe_button_box" name="buttons" groups="base.group_user">
                            <button name="tasks_from_features" string="Tasks from Features" type="object"
                                attrs="{'invisible':['|',('state','=','cancelled'),'|',
                                    ('state','=','draft'),('state','=','done')]}"
                                confirm="Are you sure you want to create a task for each feature related to this sprint?"/>
                            <button name="set_features_done" string="Features Done" type="object"
                                attrs="{'invisible':['!',('state','=','done')]}"
                                confirm="Are you sure you want to mark all features related to this sprint as done?"/>
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="project_id"
                                    on_change="onchange_project(project_id,stage_id)"/>
                                <field name="product_backlog_id"
                                    on_change="onchange_product_backlog(product_backlog_id)"/>
                                <field name="release_backlog_id"/>
                                <field name="expected_hours"/>
                                <field name="effective_hours"/>
                                <field name="remaining_hours"/>
                            </group>
                            <group>
                                <field name="date_start"/>
                                <field name="date_end"/>
                                <field name="deadline"/>
                                <field name="progress" widget="progressbar"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Tasks" name="tasks">
                                <field name="task_ids"
                                    attrs="{'readonly':['|',('state','=','cancelled'),'|',
                                    ('state','=','draft'),('state','=','done')]}"
                                    context="{'project_id': project_id, 'product_backlog_id': product_backlog_id,
                                    'release_backlog_id': release_backlog_id, 'sprint_id': id}"/>
                            </page>
                            <page string="Features" name="features">
                                <field name="feature_ids"
                                    attrs="{'readonly':['!',('state','=','draft')]}"/>
                            </page>
                            <page string="Team Members" name="team_members">
                                <field name="member_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="company_id"/>
                                        <field name="email"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- tree -->
        <record id="view_sprint_tree" model="ir.ui.view">
            <field name="name">view.sprint.tree</field>
            <field name="model">ccorp.project.scrum.sprint</field>
            <field name="type">tree</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <tree string="Sprint" 
                    colors="grey:state in ('cancelled','done');blue:state == 'pending';
                        red:(deadline&lt;date_end) and (state in ('draft','pending','open'))">
                    <field name="name"/>
                    <field name="product_backlog_id"/>
                    <field name="release_backlog_id"/>
                    <field name="member_ids" invisible="True"/>
                    <field name="state" invisible="True"/>
                    <field name="expected_hours"/>
                    <field name="effective_hours"/>
                    <field name="remaining_hours"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="deadline"/>
                    <field name="progress" widget="progressbar"/>
                </tree>
            </field>
        </record>
        
        <!-- kanban -->
        <record model="ir.ui.view" id="view_sprint_kanban">
            <field name="name">view.sprint.kanban</field>
            <field name="model">ccorp.project.scrum.sprint</field>
            <field name="arch" type="xml">
                <kanban default_group_by="stage_id">
                    <field name="color"/>
                    <field name="state"/>
                    <field name="remaining_hours" sum="Remaining Hours"/>
                    <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <div class="oe_dropdown_toggle oe_dropdown_kanban">
                                <span class="oe_e">í</span>
                                <ul class="oe_dropdown_menu">
                                    <t t-if="widget.view.is_action_enabled('edit')"><li><a type="edit">Edit...</a></li></t>
                                    <t t-if="widget.view.is_action_enabled('delete')"><li><a type="delete">Delete</a></li></t>
                                    <li><ul class="oe_kanban_colorpicker" data-field="color"/></li>
                                </ul>
                            </div>
                            <div class="oe_kanban_content">
                                <div><b><field name="name"/></b></div>
                                <div>
                                    <field name="project_id"/><br/>
                                    <t t-if="record.deadline.raw_value and record.deadline.raw_value lt (new Date())" t-set="red">oe_kanban_text_red</t>
                                    <span t-attf-class="#{red || ''}"><i><field name="deadline"/></i></span>
                                </div>
                                <div class="oe_kanban_footer_left">
                                    <span title="Remaining Hours">
                                        <span class="oe_e">N</span>
                                        <t t-esc="Math.round(record.remaining_hours.raw_value)"/>
                                    </span>
                                </div>
                            </div>
                            <div class="oe_clear"></div>
                        </div>
                    </t>
                    </templates>
                </kanban>
            </field>
         </record>
        
        <!-- calendar -->
        <record id="view_sprint_calendar" model="ir.ui.view">
            <field name="name">view.sprint.calendar</field>
            <field name="model">ccorp.project.scrum.sprint</field>
            <field name="type">calendar</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <calendar string="Sprint" date_start="date_start"
                    date_stop="deadline" color="product_backlog_id">
                    <field name="name"/>
                </calendar>
            </field>
        </record>
        
        <!-- gantt -->
        <record id="view_sprint_gantt" model="ir.ui.view">
            <field name="name">view.sprint.gantt</field>
            <field name="model">ccorp.project.scrum.sprint</field>
            <field name="type">gantt</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <gantt string="Sprint" date_start="date_start" date_stop="deadline" color="id">
                    <level object="project.scrum.product.backlog"
                        link="product_backlog_id" domain="[]">
                        <field name="name"/>
                    </level>
                </gantt>
            </field>
        </record>
        
        <!-- search -->
        <record id="view_sprint_search" model="ir.ui.view">
            <field name="name">view.sprint.search</field>
            <field name="model">ccorp.project.scrum.sprint</field>
            <field name="arch" type="xml">
               <search string="Sprint">
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="product_backlog_id"/>
                    <field name="release_backlog_id"/>
                    <separator/>
                    <filter string="New" name="new" domain="[('state','=','draft')]"/>
                    <filter string="In Progress" name="in_progress" domain="[('state','=','open')]"/>
                    <filter string="Cancelled" name="cancelled" domain="[('state','=','cancelled')]"/>
                    <filter string="Pending" name="pending" domain="[('state','=','pending')]"/>
                    <filter string="Closed" name="closed" domain="[('state','=','close')]"/>
                    <separator/>
                    <filter string="My Sprints" name="my_sprints"
                        domain="['|',('member_ids','in',uid),('user_id','=',uid)]"/>
                    <group expand="1" string="Group By...">
                        <filter string="Scrum Master" name="group_scrum_master" domain="[]"  context="{'group_by':'user_id'}"/>
                        <filter string="Project" name="group_project" domain="[]"  context="{'group_by':'project_id'}"/>
                        <filter string="Product Backlog" name="group_product_backlog" domain="[]"  context="{'group_by':'product_backlog_id'}"/>
                        <filter string="Release Backlog" name="group_release_backlog" domain="[]"  context="{'group_by':'release_backlog_id'}"/>
                        <filter string="Stage" name="group_stage" domain="[]"  context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- project.scrum.feature.type -->
        <!-- form -->
        <record id="view_feature_type_form" model="ir.ui.view">
            <field name="name">view.feature.type.form</field>
            <field name="model">ccorp.project.scrum.feature.type</field>
            <field name="type">form</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <form string="Feature Type" version="7.0">
                    <sheet>
                        <group>
                            <group>
                                <field name="code"/>
                            </group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- tree -->
        <record id="view_feature_type_tree" model="ir.ui.view">
            <field name="name">view.feature.type.tree</field>
            <field name="model">ccorp.project.scrum.feature.type</field>
            <field name="type">tree</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <tree string="Feature Type">
                    <field name="code"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>
        
        <!-- actions -->
        <!-- project.scrum.product.backlog -->
        <record model="ir.actions.act_window" id="action_product_backlog">
            <field name="name">Product Backlog</field>
            <field name="res_model">ccorp.project.scrum.product.backlog</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{'search_default_in_progress': 1}</field>
            <field name="search_view_id" ref="view_product_backlog_search"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create new Product Backlog</p>
            </field>
        </record>
        
        <!-- project.scrum.feature -->
        <record model="ir.actions.act_window" id="action_feature">
            <field name="name">Features</field>
            <field name="res_model">ccorp.project.scrum.feature</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{'search_default_in_progress': 1, 'search_default_approved': 1}</field>
            <field name="search_view_id" ref="view_feature_search"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create new Feature</p>
            </field>
        </record>
        
        <!-- project.scrum.release.backlog -->
        <record model="ir.actions.act_window" id="action_release_backlog">
            <field name="name">Release Backlog</field>
            <field name="res_model">ccorp.project.scrum.release.backlog</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{'search_default_in_progress': 1}</field>
            <field name="search_view_id" ref="view_release_backlog_search"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create new Release Backlog</p>
            </field>
        </record>
        
        <!-- project.scrum.sprint -->
        <record model="ir.actions.act_window" id="action_sprint">
            <field name="name">Sprints</field>
            <field name="res_model">ccorp.project.scrum.sprint</field>
            <field name="view_mode">kanban,tree,form,calendar,gantt</field>
            <field name="context">{'search_default_in_progress': 1, 'search_default_my_sprints': 1}</field>
            <field name="search_view_id" ref="view_sprint_search"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create new Sprint</p>
            </field>
        </record>
        
        <!-- project.scrum.feature.type -->
        <record model="ir.actions.act_window" id="action_feature_type">
            <field name="name">Feature Types</field>
            <field name="res_model">ccorp.project.scrum.feature.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create new Feature Type</p>
            </field>
        </record>
    </data>
</openerp>